#vipAccountInboxContent
	margin-right:98px
	margin-left:20px
	margin-top:10px
	color:#000
	font-size:13px

	.menu
		padding-bottom:40px
		border-bottom:2px solid #d3d3d3

		li
			padding-left:40px
			
			a
				color:#d1d1d1
				font-weight:600
				text-decoration:none

				i.fa
					margin-right:3px
					vertical-align:0

			

			&:first-child
				padding-left:0

		select
			outline:none
			border:0
			background-color:transparent
			font-weight:600
			margin-top:5px
			width:98px
			-moz-appearance: none
			-webkit-appearance: none
			background: transparent url("/images/speechbubble.png") 110% 2px no-repeat

			&.more
				width:50px
				color:#d1d1d1

	.messages
		margin-top:20px
		font-weight:600

		li.media
			padding-bottom:10px
			border-bottom:2px solid #d1d1d1
			
			a

				color:#000
				font-weight:600
				text-decoration:none	

			h4
				font-weight:600

			.desc
				color:#d1d1d1