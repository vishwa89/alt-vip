#product-details
	background-color:#f6f6f6
	padding: 20px 45px0 45px
	color:#929292

	a 
		color:#929292
		
		&:hover

			color:#000

	.row
		margin:0
		margin-bottom:10px
		padding-bottom:15px
		border-bottom: 2px solid #cbcbcb
			

		.brand 

			a 
				margin-left: 8px
				font-weight: 700
				text-decoration: underline

				

		.social

			li:first-child
				padding: 2px 12px
				padding-top:7px
				border: 1px solid black
				color: #000
				font-weight: 700
				line-height:14px


		.chat_btn
			
			text-align:left
			font-size: 11px
			padding: 2px
			padding-left:10px
			width: 115px
			height: 25px
			border-radius: 2px
			background: #d1d1d1 url(/images/speechbubble.png) 92% 3px no-repeat
			font-weight: 100
			border:0

			&:hover
				color:#fff
				background: #3c3c3c url(/images/speechbubble_hover.png) 92% 3px no-repeat
				transition: all 0.3s ease-in-out 0s
	

	.details 
		color:#000
		
		.title
			font-size: 30px
			font-weight: 600
			

		.price
			
			font-weight: 300;
			font-size: 30px

		.vat
			color:#929292
			
		.delivery
			color:#929292
			font-size:10px
			list-style-type:none
			margin-top:10px

			li 
				margin-bottom:10px

				&:last-child
					margin-bottom:0;

		.carousel-title
			color:#000
			font-size:15px
			font-weight:700
			margin-top:15px
			text-align:center
			
			a
				text-decoration:underline



    			
	.tabs

		ul 
			li 

				&:hover,&.active
					
					a 
						background-color:transparent	
						border:0

				a 
					font-weight:700
					font-size:16px
					border:0
					background-image:url('/images/navi_arrow.png')
					background-position:center 50px
					background-repeat:no-repeat
					

					&:hover,&.active
						background-image:url('/images/navi_arrow.png')
						background-position:center bottom
						background-repeat:no-repeat
						box-shadow:none
						transition:all 0.3s ease-in-out 0s
						border:0
						background-color:transparent
					 
						

		.tab-pane
			font-family: "source sans pro";
			font-size: 16px;
			color:#808080
			padding-top: 20px
			padding-bottom: 20px
			background: none
			height: 250px
			overflow: scroll
			border-bottom: 1px solid #cbcbcb


			
	.carousel-inner
		.item
			width:100%




