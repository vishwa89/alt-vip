#follow
  display none
  position fixed
  height 100%
  width 100%
  background-color rgba(255, 255, 255, 0.85)
  z-index 10000
  top 0
  left 0
  .close
    position absolute
    top 10px
    right 10px
  .wrapper
    padding-top 50px
    height 700px
    width 60%
    margin auto
    font-family 'PT Sans'
    font-size 24px
    color black
    input[type="email"]
      border none
      box-shadow none
      padding-left 20px
      background-image url(../images/follow_input.png)
      background-size contain
      background-color transparent
      background-repeat no-repeat
      background-position left
      font-family 'PT Sans'
      font-size 24px
      margin-bottom 20px
      &:focus
      &:invalid
        color black
        border none
        box-shadow none
    .subscribe
      background-color transparent
      border none
      margin-bottom 20px
    .title
      text-transform uppercase
      margin-bottom 20px
    .social_icon
      opacity 0.5
      margin 0 auto
      width 55%
      min-width 100px
      max-width 150px
      height auto
      margin-bottom 20px
      &#weixin
        opacity 1
      &:hover
        opacity 1
        transition all 0.2s ease-in-out


