#filters
  bottom -135px
  left 0
  position fixed
  width 100%
  height 185px
  padding 25px 0
  z-index 128
  background-color rgb(249, 249, 249)
  text-align center
  >div
  	display block
  	height 130px
  	border-left 1px solid #dddddd
  	&:first-child
  		border none
  #filterHandle
  	width 100%
  	position absolute
  	top -20px
  	height 20px
  	text-align center
  	cursor pointer
  	.text
	    color rgb(61, 61, 61)
	    font-family 'PT Sans'
	    font-weight 700
	    font-size 0.75em
	    margin 3px auto 0
	    text-align center
	    text-transform uppercase
	    width 38px
	    margin 0 auto
	    background-color: rgb(249, 249, 249);
	    border-top-left-radius: 5px;
	    border-top-right-radius: 5px;
	    display block
	    height 20
	    padding-top 5px
	    width 75px
	    cursor point
  input[type="radio"]
    display none
  .filter-button
	  background-color rgba(255, 255, 255, 0)
	  border 4px solid #ffffff
	  border-radius 8px
	  color #5a5a5a
	  display table
	  font-family "PT Sans","source sans pro"
	  font-weight 700
	  text-align center
	  text-transform uppercase
	  margin 0 auto
	  width 60%
	  font-size 12px
	  transition all 0.5s ease
	  &.gender
	  	height 65px
	  	width 80%
	  	margin-bottom 11px
	  &.type,
	  &.sort
	  	height 40px
	  	margin 0 0 11px 11px
	  	width 85%
	  &:hover,
	  &.active
	    background-color white
	    border 4px solid #b4b4b4
	    box-shadow 0 5px 0 #dadada
	    color rgb(87, 87, 87)
	.color
		text-indent -99999px
		height 23px
		width 23px
		border-radius 50%;
		margin 13px 18px
		transition all 0.5s ease
		&:hover,
	    &.active
		 box-shadow 0px 4px 0px 1px #ababab
	.goexplore
	  font-size 14px
	  background-color #656565
	  border 4px solid #b4b4b4
	  border-radius 8px
	  color rgb(255, 255, 255)
	  font-family "pt-sans","source sans pro"
	  font-weight 600
	  height 91px
	  width: 80%;
	  margin: 0 auto
	  text-align center
	  text-transform uppercase
	  display table
	  transition all 0.5s ease
	  &:hover,
	  &.active
	   	background-color black
	   	box-shadow 0 5px 0 #dadada
	.child
		display: table-cell;
		vertical-align: middle;
	.prefer
	  color rgb(133, 133, 133)
	  font italic 400 0.75em/1.38 Helvetica
	  text-align center
	  text-decoration underline
	  margin-top 20px

