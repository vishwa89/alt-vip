#vipAccountSidebar
	padding-left:18%
	padding-right:10%
	border-right:2px solid #d3d3d3
	height:500px

	.nav
		margin-bottom:100px
		
		li
			padding-left:15%
		

			&.active
				border:2px solid #d3d3d3
			a
				color:#000
				font-size:14px
				text-transform:uppercase
				font-weight:600

				i.fa-paper-plane
					margin-left:-35px
					font-size:17px
					margin-right:15px

				&:hover
					background-color:transparent
	form
		input
			&.search
				height:40px
				border:2px solid #d3d3d3
				border-right:0
				outline:none
				color:#646464
				padding-left:10px

				&:focus
					border:2px solid #d3d3d3
					border-right:0	

		
		.addon
			height:40px

		button
			background-color:transparent
			border:2px solid #d3d3d3
			border-left:0
			outline:none

			&:focus
				outline:none
				border:2px solid #d3d3d3
				border-left:0
				
			.glyphicon
				color:#d1d1d1

			
			
		
