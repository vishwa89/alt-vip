#vipAccountSidebar
	padding-left:18%
	padding-right:10%
	border-right:2px solid #e3e3e3
	height:500px
	

	.nav
		margin-bottom:100px
		
		li
			padding-left:15%
			height:35px
			border-radius:3px
			margin-bottom:10px
			
			
		

			&.active
				border:2px solid #e3e3e3
			a
				color:#000
				font-size:12px
				text-transform:uppercase
				font-weight:600
				padding-top:7px
				padding-bottom:0


				.compose-icon
					margin-left:-35px
					background:url('/images/compose-icon.jpg') 40% 0px no-repeat
					display:inline-block
					padding-left:35px
					height:20px
					width:19px

					margin-right:15px



				&:hover
					background-color:transparent
	form
		input
			&.search
				height:40px
				border:2px solid #e3e3e3
				border-right:0
				outline:none
				color:#646464
				padding-left:10px
				

				&:focus
					border:2px solid #e3e3e3
					border-right:0	

		
		.addon
			height:40px

		button
			background-color:transparent
			border:2px solid #e3e3e3
			border-left:0
			outline:none
			

			&:focus
				outline:none
				border:2px solid #e3e3e3
				border-left:0
				
			.glyphicon
				color:#d1d1d1

			
			
		
