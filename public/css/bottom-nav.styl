#bottom-nav
  position fixed
  bottom 0
  left 0
  right 0
  z-index 1000
  background-color rgb(0, 0, 0)
  box-shadow 0 -5px 0 rgba(255, 255, 255, 0.18)
  span
    display inline-block
    margin-top 2px
    height 40px
    a
      color: rgb(160, 160, 160)
      font: 700 25px/1.2 'PT Sans'
      font-size: 14px
      line-height: 1.38em
      text-transform: uppercase
      text-align: center
      text-decoration: none
      display block
      padding 10px 13px 10px 20px
      background url('/images/navi_dot.png') -1px 14px no-repeat
      &:hover
        transition all 0.8s ease
        color #fff
  span:first-child
  span.language
    a 
      background-image: none
  span.language
    border-left: 1px solid #2d2d2d;
    padding-right 10px
  


